{
  "name": "npm-stuff",
  "displayName": "npm Stuff",
  "description": "",
  "version": "0.0.6",
  "publisher": "RoiEfrati",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/RoiEf/npm-stuff.git"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "npm-stuff.dependenciesAlerts.runInstall",
        "title": "npm Stuff: Run npm install"
      },
      {
        "command": "npm-stuff.dependenciesAlerts.refresh",
        "title": "npm Stuff: Refresh Dependencies Alert"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "npm Stuff",
      "properties": {
        "npm-stuff.alwaysShowAlerts.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Show npm-stuff status bar alerts even when no active warning is present."
        },
        "npm-stuff.dependenciesLinks.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable clickable links for dependencies in package.json."
        },
        "npm-stuff.dependenciesLinks.registryUrl": {
          "type": "string",
          "default": "https://www.npmjs.com/package/",
          "description": "Registry URL used for package links."
        },
        "npm-stuff.dependenciesAlerts.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable project-level alerts when dependencies in package.json change after git sync."
        },
        "npm-stuff.migrationAlerts.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable migration alerts only for projects that include prisma in dependencies or devDependencies."
        },
        "npm-stuff.migrationAlerts.migrationsFolder": {
          "type": "string",
          "default": "prisma/migrations/",
          "description": "Workspace-relative migrations folder to monitor; empty values are treated as missing/disabled."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.13",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  }
}
